# change window focus within space


# rotate layout clockwise
shift + alt - r : yabai -m space --rotate 270

# toggle window float
#alt - q : yabai -m window --toggle float --grid 4:4:1:1:2:2
alt - q : yabai -m window --toggle float --grid 16:16:1:1:14:14

# maximize a window
alt - f : yabai -m window --toggle zoom-fullscreen
#alt - f : yabai -m window --grid 1:1:0:0:1:1

# reserved
alt - space : ~/scripts/yabai-cycle.sh


# balance out tree of windows (resize to occupy same area)
shift + alt - v : yabai -m space --balance


#escape - f: yabai -m space --balance

# move window to space #
cmd - f1 : yabai -m window --space 1;
cmd - f2 : yabai -m window --space 2;
cmd - f3 : yabai -m window --space 3;
cmd - f4 : yabai -m window --space 4;
cmd - f5 : yabai -m window --space 5;
cmd - f6 : yabai -m window --space 6;
cmd - f7 : yabai -m window --space 7;



# stop/start/restart yabai
ctrl + alt - s : skhd --restart-service
ctrl + alt - r : yabai --restart-service
ctrl + alt - j : pkill borders; borders
